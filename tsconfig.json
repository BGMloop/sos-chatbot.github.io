{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    /* Performance optimizations */
    "disableSourceOfProjectReferenceRedirect": true,
    "composite": false,
    "disableSizeLimit": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "importsNotUsedAsValues": "remove",
    "useUnknownInCatchVariables": false,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "lib/test-tools.js",
    "next-env.d.ts",
    "/tmp/.next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "dist",
    ".next"
  ]
}

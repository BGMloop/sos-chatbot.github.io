# Example environment variables file
# Copy this file to .env and fill in your values

# WxFlows Configuration
WXFLOWS_ENDPOINT=https://graphql.stepzen.com/api/wxflows
STEPZEN_API_KEY=your_stepzen_api_key_here

# News API (for news search and headlines)
NEWS_API_KEY=your_news_api_key_here  # Get from https://newsapi.org/

# Web Search APIs (optional, will use free fallbacks if not provided)
GOOGLE_API_KEY=your_google_api_key_here  # For Google Custom Search
GOOGLE_CSE_ID=your_google_cse_id_here    # For Google Custom Search Engine
BING_SEARCH_API_KEY=your_bing_api_key_here  # For Bing Search

# Generative AI model (required for chatbot)
GEMINI_API_KEY=your_gemini_api_key_here  # For Google Gemini API

# External Auth Providers
CLERK_SECRET_KEY=your_clerk_secret_key_here  # For Clerk authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# Database
CONVEX_DEPLOYMENT=your_convex_deployment_id_here  # For Convex database 